<table width="100%" border="0" align="center">
  <tr>
    <td align="center">&nbsp;</td>
    <td align="center" width="529" height="396" background="<%=asset_path("adminloginplaster.png")%>" style="background-repeat:no-repeat;text-align:center">
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
			<%= form_tag sessions_path do %>
			<div class="field">
				<%= label_tag :email %><br/>
				<%= text_field_tag :email, params[:email] %>
			</div>
			<div class="field">
				<%= label_tag :password %><br/>
				<%= password_field_tag :password %>
			</div>
			<div class="field">
				<%= label_tag :remember_me, "Recuérdame" %>
				<%= check_box_tag :remember_me, 1, params[:remember_me] %>
			</div>
  		<p><%= link_to "He olvidado mi contraseña", new_password_reset_path %></p> 
  		<p class="button"><%= submit_tag "Log In"%></p>
			<% end %>
    </td>
    <td align="center">&nbsp;</td>
  </tr>
</table>

